model Book {
  id            Int      @id @default(autoincrement())
  title         String
  author        String
  isbn          String   @unique
  genre         String
  publisher     String?
  publishedYear Int?
  pages         Int?
  language      String?  @default("PortuguÃªs")
  description   String?
  
  available     Boolean  @default(true)
  borrowedAt    DateTime?
  dueDate       DateTime?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("books")
}